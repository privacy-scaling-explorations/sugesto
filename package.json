{
    "name": "sugesto",
    "description": "Anonymous feedback for PSE activities.",
    "license": "MIT",
    "repository": "git@github.com:privacy-scaling-explorations/sugesto.git",
    "homepage": "https://github.com/privacy-scaling-explorations/sugesto",
    "bugs": "https://github.com/privacy-scaling-explorations/sugesto/issues",
    "private": true,
    "scripts": {
        "start": "yarn workspace web-app dev",
        "lint": "eslint . --ext .js,.ts",
        "prettier": "prettier -c .",
        "prettier:write": "prettier -w .",
        "commit": "cz",
        "precommit": "lint-staged"
    },
    "keywords": [
        "javascript",
        "typescript",
        "monorepo",
        "zero-knowledge",
        "semaphore",
        "sugesto"
    ],
    "workspaces": [
        "apps/*"
    ],
    "packageManager": "yarn@3.2.1",
    "devDependencies": {
        "@commitlint/cli": "^17.3.0",
        "@commitlint/config-conventional": "^17.3.0",
        "@types/node": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "commitizen": "^4.2.6",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.2.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "lint-staged": "^13.1.0",
        "prettier": "^2.5.1",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
